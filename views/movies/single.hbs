<body class="single">

  {{#with data}}

    <div class="single-card card mb-3" style="max-width: 540px;">
      <div class="row g-0">
        <div class="col-md-4">
          <img src="{{this.image}}" class="img-fluid rounded-start" alt="..." />
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h4>{{this.title}}</h4>
            <h5 class="card-title">Director: {{this.director}}</h5>
            <h6>Stars</h6>
            <ul>
                {{#each stars}}
                    <li>{{this}}</li>
                {{/each}} 
             </ul>
            <p class="card-text">{{this.description}}</p>
            <ul class="showTime">
                {{#each showtimes}} 
                <li>{{this}}</li> 
                {{/each}}  
            </ul>
          </div>
        </div>
      </div>
    </div>

  {{/with}}

</body>